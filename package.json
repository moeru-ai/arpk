{
  "name": "arpk",
  "type": "module",
  "version": "0.2.1",
  "packageManager": "pnpm@9.12.3",
  "license": "MIT",
  "homepage": "https://github.com/moeru-ai/arpk",
  "repository": "github:moeru-ai/arpk",
  "bugs": "https://github.com/moeru-ai/arpk/issues",
  "description": "Ollama as your translator, with DeepLX-compatible API.",
  "keywords": [
    "translator",
    "translation",
    "ollama"
  ],
  "bin": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pkgroll",
    "bump": "bumpp",
    "dev": "tsx src",
    "lint": "eslint --flag unstable_ts_config .",
    "lint:fix": "eslint --flag unstable_ts_config --fix .",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.5",
    "cleye": "^1.3.2",
    "dotenv": "^16.4.5",
    "hono": "^4.6.9",
    "ollama": "^0.5.9",
    "std-env": "^3.8.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@importantimport/eslint-config": "1.0.0-alpha.1",
    "@importantimport/tsconfig": "^0.1.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.9.0",
    "bumpp": "^9.8.1",
    "eslint": "^9.14.0",
    "jiti": "^2.4.0",
    "pkgroll": "^2.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
